<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:paddingBottom="10dp"
    android:background="#F6F3F3"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_v85"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85"/>

    <TextView
        android:id="@+id/txt_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/gl_v85"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="#0F50F4"
        tools:text="US"
        android:textSize="@dimen/textSize"
        android:layout_margin="@dimen/marginSmall"/>

    <TextView
        android:id="@+id/txt_name_region"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#0F50F4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/gl_v85"
        tools:text="United States of America, NA"
        android:textSize="@dimen/textSize"
        android:layout_margin="@dimen/marginSmall"/>

    <TextView
        android:id="@+id/txt_capital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#0F50F4"
        app:layout_constraintTop_toBottomOf="@id/txt_name_region"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Washington, D.C."
        android:textSize="@dimen/textSize"
        android:layout_margin="@dimen/marginSmall"/>

</androidx.constraintlayout.widget.ConstraintLayout>